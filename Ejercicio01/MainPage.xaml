<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio01.MainPage">

    <ScrollView>
        <Border Stroke="MediumPurple"
        StrokeThickness="7"
        HorizontalOptions="FillAndExpand"
               >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40,40,0,0" />
            </Border.StrokeShape>

            <StackLayout  VerticalOptions="Center" >
                <VerticalStackLayout Spacing="20" >
                    <Button   BackgroundColor="MediumPurple" CornerRadius="10" HeightRequest="50" WidthRequest="100" Text="Botón 1" BorderColor="Black" BorderWidth="5"></Button>
                    <Button   BackgroundColor="MediumPurple" CornerRadius="10" HeightRequest="50" WidthRequest="100" Text="Botón 2"></Button>
                    <Button   BackgroundColor="MediumPurple" CornerRadius="10" HeightRequest="50" WidthRequest="100" Text="Botón 3"></Button>
                               
                </VerticalStackLayout>
                <HorizontalStackLayout Padding="20,20,20,20">
                    <Label Text="Nombre:" Margin="0,0,10,0"></Label>
                    <Entry BackgroundColor="LightBlue" WidthRequest="200"></Entry>
                </HorizontalStackLayout>



            </StackLayout>
        </Border>

    </ScrollView>

</ContentPage>
